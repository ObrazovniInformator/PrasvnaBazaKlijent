@{
    ViewData["Title"] = "Index";
    obrazovn_AdminPanelContext _context = new obrazovn_AdminPanelContext();
    int p = ViewBag.IdRubrika;
    List<PrimeriKnjizenja> primeriKnjizenjas = ViewBag.PrimeriKnjizenja;
    
}
<style>
    .slika {
        width: auto;
        background-attachment: fixed;
        background-repeat: no-repeat;
    }

    .glavnopolje {
        background-image: url("")
    }
</style>
<script>
    document.getElementById("PrimeriKnjizenja").style.backgroundColor = "#565682";
    document.getElementById("PrimeriKnjizenjaP").style.color = "#fff";
    document.getElementById("RubrikaPk @p").style.color = "#fff";
    document.getElementById("RubrikaPk @p").style.backgroundColor = "#8b8bb3";

</script>
<section>
    <style>
        .background-img {
            position: relative;
            width: 100%;
            height: 100%;
            background-size: cover;
            position: relative
        }
    </style>
    <div class="glavnopolje navbar-expand">
        <div>
            <h1>
                ПРИМЕРИ КЊИЖЕЊА <br>
            </h1>

            <table class="table float-lg-right" style="margin-top:4%; width:100%">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayName("Наслов")
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in primeriKnjizenjas)
                    {
                        <tr style="margin-left:0px;">
                            <td style="margin-left:0px">
                                <a href="~/PrimeriKnjizenja/Prikaz/@item.Id" class="nav-link"><strong>@Html.DisplayFor(modelItem => item.Naslov)</strong> <span style="margin-left:10px;"></span> <i>@Html.DisplayFor(modelItem => item.Podnaslov)</i></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</section>